<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:gravity="center"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:clipToOutline="true">

    <!-- Placeholder for coffee image -->
    <ImageView
        android:id="@+id/imageCoffee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@drawable/round_border_red"
        android:clipToOutline="true"
        android:contentDescription="Coffee Image" />


    <TextView
        android:id="@+id/textCoffeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/textCoffeePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
