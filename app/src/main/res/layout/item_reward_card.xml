<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/cardPink"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <!-- Text container -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textRewardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textRewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points Required"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Redeem Button on right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRedeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/redIcon"
        android:text="Redeem"
        android:layout_marginStart="8dp" />
</LinearLayout>

