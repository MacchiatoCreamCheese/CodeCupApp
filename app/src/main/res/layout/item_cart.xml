<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/cardPink"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- First row: Name (left) and Price (right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textCartItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/textCartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3.00 x1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121" />
    </LinearLayout>

    <!-- Options row -->
    <TextView
        android:id="@+id/textCartItemOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Single | Hot | Medium | No Ice"
        android:textColor="#6D6D6D"
        android:textSize="14sp" />

</LinearLayout>
