<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkBackground">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/detailsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Placeholder -->
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@color/offWhite"
                android:elevation="4dp" />

            <!-- Coffee Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="9dp">

                <TextView
                    android:id="@+id/textCoffeeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coffee"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/button_toggle_selector"
                        android:text="–"
                        android:textColor="@color/black"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/textQuantity"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/button_toggle_selector"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Option Groups -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Shot" android:textStyle="bold" />
            <LinearLayout android:id="@+id/shotGroup"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" android:orientation="horizontal" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Temperature" android:textStyle="bold" />
            <LinearLayout android:id="@+id/tempGroup"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" android:orientation="horizontal" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Size" android:textStyle="bold" />
            <LinearLayout android:id="@+id/sizeGroup"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" android:orientation="horizontal" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Ice" android:textStyle="bold" />
            <LinearLayout android:id="@+id/iceGroup"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" android:orientation="horizontal" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Total: $3.00"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- ✅ FloatingActionButton should be direct child of CoordinatorLayout -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Add to Cart"
        android:contentDescription="Add to cart"
        android:backgroundTint="@color/redIcon"
        android:textColor="@android:color/white"
        app:icon="@drawable/hand_package_40px"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:iconGravity="start" />


    <!-- Dimmed Overlay -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- Bottom Sheet Preview -->
    <LinearLayout
        android:id="@+id/cartPreviewSheet"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/rounded_bottom_nav"
        android:padding="10dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart Preview"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCartPreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never" />

        <Button
            android:id="@+id/btnGoToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Cart"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/redIcon"
            android:textColor="@android:color/white" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
